<p hidden id='user_show' class='pageName'>ID <%= user.id %></p>

<h1>Show <%= user.email %></h1>

  <% if policy(user).edit? %>
    <p><%= link_to("Edit User #{user.id}", edit_user_path(user)) %>: <%= user.email %> -- role: <%= user.role %></p>
  <% else %>
    <p>User <%= user.id %>: <%= user.email %> -- role: <%= user.role %></p>
  <% end %>

<i>Current User: <%= current_user.email %> -- <%= current_user.role %></i>
